<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="@color/pressed"
                android:endColor="@color/pressed2"
                android:type="linear"
                android:angle="270"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <stroke android:width="2dp"
                android:color="@color/border"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="@color/pressed"
                android:endColor="@color/pressed2"
                android:type="linear"
                android:angle="270"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <stroke android:width="2dp"
                android:color="@color/border"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="@color/normal"
                android:endColor="@color/normal2"
                android:type="linear"
                android:angle="270"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <stroke android:width="2dp"
                android:color="@color/border"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle" >
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="@color/pressed"
                android:endColor="@color/pressed2"
                android:type="linear"
                android:angle="270"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <stroke android:width="2dp"
                android:color="@color/border"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="@color/normal"
                android:endColor="@color/normal2"
                android:type="linear"
                android:angle="270"/>
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <stroke android:width="2dp"
                android:color="@color/border"/>
        </shape>
    </item>



</selector>


